#left
  .media.user-media.bg-dark.dker
    .user-media-toggleHover
      span.fa.fa-user
    .user-wrapper.bg-dark
      a.user-link(href='')
        img.media-object.img-thumbnail.user-img(alt='User Picture', src='/images/default-user.png')
      .media-body
        h5.media-heading #{user ? user.userName : 'User Anonymous'}
        ul.list-unstyled.user-info
          li.ellipsis
            a(href='#') #{user ? user.email : 'Administrator'}
          li
            | Calendar :
            br
            small
              - var d = new Date()
              i.fa.fa-calendar  #{d.getDate() + '/' + (d.getMonth() + 1) + '/' + d.getFullYear()}
